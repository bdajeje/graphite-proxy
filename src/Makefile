all: bin

libs:
	$(MAKE) -C library

bin: libs
	$(MAKE) -C server

clean:
	$(MAKE) -C library clean
	$(MAKE) -C server clean

cleaner:
	$(MAKE) -C library cleaner
	$(MAKE) -C server cleaner

build-docs:
	doxygen doxygen.config

docs: build-docs
	@echo "\n\n*******************************************\nWarnings/errors generated by doxygen:\n----------------------"
	@cat doxygen_output.log

checks:
	cppcheck --quiet --suppressions-list=cppcheck.suppresslist --enable=all --template=gcc . 2> cppcheck_output.log
	@cat cppcheck_output.log
